{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2015",
    "baseUrl": ".",
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "@/*": ["src/*", "../*"],
      "@swiper-x": ["../*"]
    }
  },
  "include": [
    "stories/**/*",
    "tests/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
