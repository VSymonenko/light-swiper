{
  "description": "A lightweight swiper",
  "scripts": {
    "check": "npm run check:types && npm run lint && npm test",
    "test": "jest",
    "check:types": "tsc --noEmit",
    "diagnostics": "tsc --diagnostics --extendedDiagnostics",
    "playground": "lerna exec --scope @swiper-x/docs -- npm run storybook",
    "publish": "lerna run check && lerna run build && lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VSymonenko/light-swiper.git"
  },
  "keywords": [
    "swiper",
    "slider",
    "typescript"
  ],
  "author": "Volodymyr Symonenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VSymonenko/light-swiper/issues"
  },
  "homepage": "https://github.com/VSymonenko/light-swiper#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@storybook/addon-docs": "^6.0.28",
    "@storybook/addon-storysource": "^6.0.28",
    "@storybook/client-api": "^6.0.28",
    "@storybook/html": "^6.0.28",
    "@storybook/preset-typescript": "^3.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "declaration-bundler-webpack-plugin": "^1.0.3",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "fork-ts-checker-webpack-plugin": "^5.2.1",
    "husky": "^4.3.0",
    "jest": "^26.6.2",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.7",
    "typescript": "^4.0.3",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "webpack-merge": "^5.2.0"
