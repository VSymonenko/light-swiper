    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "fork-ts-checker-webpack-plugin": "^5.0.6",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@babel/polyfill": "^7.10.4"
