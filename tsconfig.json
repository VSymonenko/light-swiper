{
  "compilerOptions": {
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2015",
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "tests/*"
  ]
}