{
  "compilerOptions": {
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2015",
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "stories/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}